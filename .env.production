# Production Environment Configuration for Amazon Product Intelligence Platform

# Application Configuration
APP_NAME="Amazon Product Intelligence Platform"
VERSION="1.0.0"
DEBUG=false
ENVIRONMENT="production"

# Server Configuration
HOST="0.0.0.0"
PORT=8000
WORKERS=4
RELOAD=false

# Database Configuration (PostgreSQL for production)
DATABASE_URL="postgresql+asyncpg://amazon_user:your_secure_password@localhost:5432/amazon_product_db"
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=5
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# Redis Configuration
REDIS_URL="redis://localhost:6379/0"

# JWT Configuration
JWT_SECRET_KEY="CHANGE_THIS_TO_A_SECURE_SECRET_KEY_IN_PRODUCTION"
JWT_ALGORITHM="HS256"
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Supabase Configuration - REPLACE WITH REAL VALUES
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key" 
SUPABASE_JWT_SECRET="your-supabase-jwt-secret"

# Stripe Configuration - REPLACE WITH REAL VALUES
STRIPE_PUBLISHABLE_KEY="pk_live_your_stripe_publishable_key"
STRIPE_SECRET_KEY="sk_live_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_stripe_webhook_secret"
STRIPE_SUCCESS_URL="https://yourapp.com/success"
STRIPE_CANCEL_URL="https://yourapp.com/cancel"

# Amazon API Configuration - REPLACE WITH REAL API KEY
AMAZON_API_KEY="your-rainforest-api-key"
AMAZON_API_URL="https://api.rainforestapi.com/request"
AMAZON_RATE_LIMIT_PER_MINUTE=60
AMAZON_RATE_LIMIT_PER_SECOND=2

# CORS Configuration
CORS_ORIGINS="https://yourapp.com,https://www.yourapp.com"
CORS_ALLOW_CREDENTIALS=true

# Logging Configuration
LOG_LEVEL="INFO"
LOG_FORMAT="json"

# Security Configuration
SECURE_COOKIES=true
COOKIE_DOMAIN="yourapp.com"
TRUSTED_HOSTS="yourapp.com,www.yourapp.com"

# Rate Limiting
RATE_LIMIT_DEFAULT="100/minute"
RATE_LIMIT_AUTH="10/minute" 
RATE_LIMIT_EXTERNAL_API="60/minute"

# Monitoring Configuration
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
PROMETHEUS_METRICS_ENABLED=true
PROMETHEUS_METRICS_PATH="/metrics"

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM_EMAIL="noreply@yourapp.com"

# Cache Configuration
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000
CACHE_ENABLED=true

# Background Task Configuration
CELERY_BROKER_URL="redis://localhost:6379/1"
CELERY_RESULT_BACKEND="redis://localhost:6379/2"

# Credit System Configuration
DEFAULT_FREE_CREDITS=10
MAX_CREDITS_PER_USER=10000
CREDIT_EXPIRY_DAYS=365

# API Timeouts (in seconds)
EXTERNAL_API_TIMEOUT=30
DATABASE_TIMEOUT=10
REDIS_TIMEOUT=5

# Feature Flags
FEATURE_BULK_OPERATIONS=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_WEBHOOK_RETRIES=true
FEATURE_RATE_LIMITING=true

# Health Check Configuration
HEALTH_CHECK_INTERVAL=60
HEALTH_CHECK_TIMEOUT=10

# Documentation Configuration
DOCS_ENABLED=true
DOCS_URL="/docs"
REDOC_URL="/redoc"